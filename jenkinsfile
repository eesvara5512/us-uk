pipeline {			
    agent any
	 parameters {
		string(name: 'environment', defaultValue: 'Dev', description: 'Environment to build for (Valid values: Dev, Test, Prod)')
						
                    }

    stages{
        stage('Build'){	
			
            steps{			
			sh 'cd "${environment}"'
                        sh 'sh dev.sh'
			}
        }			
    }			
}
